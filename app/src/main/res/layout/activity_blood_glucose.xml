<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BloodGlucoseActivity">

    <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/fastingEditText"
            android:hint="Fasting"
            android:layout_marginStart="88dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/postMealEditText"
            android:hint="Post Meal" android:layout_marginEnd="92dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="128dp" android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/fastingEditText" android:layout_marginStart="30dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkSugarButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/fastingEditText"
            app:layout_constraintHorizontal_bias="0.498" android:background="@color/colorPrimary"
            android:textAlignment="center" android:textColor="@color/common_google_signin_btn_text_dark_default"/>
    <Button
            android:text="Add to Report File"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:id="@+id/addSugarToReport" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/checkSugarButton"
            app:layout_constraintHorizontal_bias="0.498" android:background="@color/colorPrimary"
            android:textAlignment="center" android:textColor="@color/common_google_signin_btn_text_dark_default"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glStatus" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>